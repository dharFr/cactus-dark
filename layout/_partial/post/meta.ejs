<div class="meta">
  <span class="author p-author h-card" itemprop="author" itemscope itemtype="http://schema.org/Person">
    <span class="p-name" itemprop="name"><% if (post.author) { %><%- post.author %><% } else { %><%- config.author %><% } %></span>
  </span>
  <%- partial('_partial/post/date', { post: post, class_name: 'postdate' }) %>
  <%- partial('_partial/post/category', { page: post }) %>
  <%- partial('_partial/post/tag', { page: post }) %>
</div>
