#archive
  .post-year
    list-style-type: none

  .post-list
    padding: 0

    .post-inline-content
      .post-inline-title
        flex: 1 100%
      
      a.h1
        @extend body .h1
        font-size: 1.2em
      
      .meta 
        > *
          display: inline
        .author
          display: none
          
      h2, .h2
        font-size: 0.9em

    .post-item
      margin-bottom: 1rem
      margin-left: 0
      list-style-type: none
      flex-flow: row wrap    

      .meta
        display: block
        margin-right: 16px
        min-width: 100px
        color: $color-meta
        font-size: 14px
      
      .inline-content-preview
        flex: 3 100%
      
  @media (min-width: 480px)
    .post-list
      .post-item
        display: flex
        margin-bottom: 5px
        margin-left: 1rem

        .meta
          text-align: left
